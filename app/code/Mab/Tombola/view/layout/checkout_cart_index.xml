<?xml version="1.0" encoding="UTF-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Add the component to the 'checkout.cart.totals' block -->
        <referenceBlock name="checkout.cart.totals">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-totals" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="tombola-checkbox" xsi:type="array">
                                    <item name="component" xsi:type="string">Mab_Tombola/tombola-checkbox</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Mab_Tombola/tombola-checkbox</item>
                                    </item>
                                    <item name="sortOrder" xsi:type="string">10</item> <!-- Adjust this value to change the order -->
                                    <item name="displayArea" xsi:type="string">after</item> <!-- This places it after the totals -->
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
