    <script type="text/javascript">
        require(['jquery', 'jquery/ui'], function ($) {
            function saveComment(DOMElement) {
                let data = {
                    'form_key': FORM_KEY,
                    'order_id': DOMElement.dataset['orderId'],
                    'comment_id': DOMElement.dataset['commentId'],
                    'comment_text': DOMElement.value
                };
                $.ajax({
                    url: "<?= $block->getUrl('ordereditor/edit/updateComment')?>",
                    data: data,
                    type: 'post',
                    dataType: 'json',
                    success: function (response) {
                        tinyMCE.activeEditor.isNotDirty = true;
                    },
                    error: function (error) {
                        console.log(['ERROR!', error]);
                    }
                });
            }

            <?php if ($isEditAllowed): ?>
            $('#mw-oe-notes .note-list-item').each(function (index, elems) {
                let $note = $(this),
                    $editWrapper = $note.find('.edit-comment-wrapper'),
                    $editContent = $editWrapper.find('.mw-oe-note-edit-content'),
                    $editButton = $editWrapper.find('.block-edit-link'),
                    $submitButton = $editContent.find('.mw-oe-notes-edit-submit'),
                    $textarea = $editContent.find('.mw-oe-note-edit-new-text'),
                    $oldComment = $note.find('.note-list-comment');

                $textarea.on('change', function (event) {
                    $oldComment.html($(event.target).val());
                });

                $editButton.on('click', function (event) {
                    event.preventDefault();
                    $editContent.toggle();
                    $editButton.toggle();
                });

                $submitButton.on('click', function (event) {
                    event.preventDefault();
                    let commentId = event.target.dataset['commentId'],
                        commentTextarea = document.getElementById('mw-oe-edit-comment-' + commentId);

                    if (commentTextarea !== null) {
                        saveComment(commentTextarea);
                    }
                    $editButton.toggle();
                    $editContent.toggle();
                });
            });
            <?php endif; ?>
        });
    </script>
